command /pp-timer <world> <time span>:
    executable by: players and console
    trigger:
        set {_world} to arg 1
        set {_time} to arg 2

        message "*** Timer set for &a%{_time}%&f!" to all players in {_world}

        wait {_time}
        message "*** Time's up!" to all players in {_world}
